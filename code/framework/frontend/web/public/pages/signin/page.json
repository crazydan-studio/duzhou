{
  "status": 0,
  "msg": "",
  "data": {
    "type": "wrapper",
    "className": "site-page w-full h-full flex flex-col justify-center items-center",
    "body": [
      {
        "type": "wrapper",
        "className": "signin-page",
        "body": [
          {
            "type": "wrapper",
            "className": "header",
            "body": "<img class='logo' src='/logo.svg'/><h3 class='title'>用户登录</h3>"
          },
          {
            "type": "form",
            "className": "signin-form",
            "redirect": "@redirect:/admin/",
            "mode": "horizontal",
            "rules": [
              {
                "rule": "!!data.account && !!data.password",
                "message": "帐号或密码不能为空"
              }
            ],
            "body": [
              {
                "type": "input-text",
                "name": "account",
                "className": "input",
                "placeholder": "请输入帐号...",
                "clearable": true,
                "label": false
              },
              {
                "type": "input-password",
                "name": "password",
                "className": "input",
                "placeholder": "请输入密码...",
                "clearable": true,
                "label": false
              },
              {
                "type": "flex",
                "justify": "space-between",
                "alignItems": "center",
                "items": [
                  {
                    "type": "checkbox",
                    "name": "rememberMe",
                    "className": "checkbox m-0 p-0",
                    "option": "记住登录"
                  },
                  {
                    "_": "Note: 链接也是一个 Site",
                    "type": "link",
                    "className": "reset-link",
                    "href": "/signin/password/reset/",
                    "body": "找回密码？"
                  }
                ]
              }
            ],
            "actions": [
              {
                "type": "submit",
                "label": "登录",
                "level": "primary"
              }
            ]
          },
          {
            "type": "link",
            "href": "/signup/",
            "blank": false,
            "body": "还没有帐号？点此注册一个"
          }
        ]
      },
      {
        "type": "wrapper",
        "className": "footer",
        "body": "<span>版权所有 © 2024 <a target='_blank' href='https://duzhou.crazydan.io'>渡舟平台</a></span>"
      }
    ]
  }
}
